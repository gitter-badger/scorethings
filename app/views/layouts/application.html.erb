  <script>
    //copied from https://github.com/twbs/bootstrap/issues/12852#issuecomment-59621810
      $(document).on('click','.navbar-collapse.in',function(e) {
          if( $(e.target).is('a') && ( $(e.target).attr('class') != 'dropdown-toggle' ) ) {
              $(this).collapse('hide');
          }
      });
  </script>
</head>
