<!DOCTYPE html>
<html>
<head>
  <title>yeaskme - score/rank things</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="yeaskme" ng-controller="HomeCtrl">
    <div ng-include="'general/navigation.html'"></div>

    <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
    <% end %>

    <%= yield %>

</body>
</html>
